{% extends "base.jinja" %}

{% block title %}
    Edit
{% endblock %}

{% block content %}
    <legend><h3>
        Edit Beacon
    </h3></legend>
    <br>
    <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <form class="form-horizontal" action="{{ url_for('portal.edit_beacon_status') }}" method="post">

                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Beacon Name:</label>
                    <div class="col-xs-7">
                        <input type="text" class="form-control" name="name" value={{ beacon }}>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Description:</label>
                    <div class="col-xs-7">
                        <input type="text" class="form-control" name="description" placeholder="Rajat da Dhaba">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Indoor Level Name:</label>
                    <div class="col-xs-7">
                        <input type="text" class="form-control" name="indoorlevel_name" placeholder="1">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-xs-3" for="name">Position:</label>
                    <div class="col-xs-7">
                        <input type="text" class="form-control" name="position" placeholder="STABLE">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-offset-4 col-xs-8">
                        <input type="submit" class="btn btn-success" value="Submit">
                        <input type="reset" class="btn btn-danger" value="Reset">
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4"></div></div>
    </div>
{% endblock %}